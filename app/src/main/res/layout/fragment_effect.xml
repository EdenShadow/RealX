<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/btn_padding"
        tools:context=".ContainerActivity">

    <TextView
            android:background="@drawable/btn_background_red"
            style="@style/AppTheme.Button"
            android:text="Add"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/effect_2d_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_small"/>

    <android.support.v7.widget.RecyclerView
            android:foreground="@drawable/avatar_foreground"
            android:id="@+id/effect_gallery"
            android:paddingTop="@dimen/btn_padding_large"
            android:paddingBottom="@dimen/btn_padding_large"
            android:layout_marginBottom="@dimen/icon_margin_bottom"
            app:layout_constraintBottom_toTopOf="@id/effect_2d_add"
            android:layout_width="match_parent"
            android:layout_height="240dp"/>
</android.support.constraint.ConstraintLayout>