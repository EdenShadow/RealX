<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/anchor_view"
        android:padding="@dimen/btn_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ContainerActivity">

    <TextView
            android:textColor="@android:color/white"
            android:layout_marginStart="@dimen/icon_margin_start"
            android:layout_marginEnd="@dimen/icon_margin_end"
            android:layout_marginTop="@dimen/icon_margin_top"
            app:layout_constraintTop_toTopOf="parent"
            android:text="请选择分享方式:"
            android:id="@+id/share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/share_list"
            android:layout_marginTop="@dimen/icon_margin_top"
            app:layout_constraintTop_toBottomOf="@id/share_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/icon_margin_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>